[flake8]
ignore =
    B101,
    E266,
    E501,
max-line-length = 160
max-complexity = 10
exclude =
    __pycache__,
    .devcontainer,
    .git,
    .vscode,
    *.pyc,
    assets,
    build,
    fpga,
    script,
    tools,

[pycodestyle]
max_line_length = 160
ignore =
    B101,
    E266,
    E501,